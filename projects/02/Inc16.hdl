/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Add16(a=true, b=true, out=o1);
    Not16(in=o1, out=o2);
    Add16(a=in, b=o2, out=out);
}
